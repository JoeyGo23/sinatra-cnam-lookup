<div class="row">
  <div class="span12">
    <form class="form-horizontal" method="post">
      <fieldset>
        <legend>Please Verify Your Telephone Number</legend>
        <% if !@errors.empty? %>
          <div class="alert alert-error">
            <strong>Errors:</strong> <%= @errors.join(",") %></b>
          </div>
        <% elsif @success %>
          <div class="alert alert-success">
            <strong>Success!</strong> Your telephone number has been verified.
          </div>
        <% end %>
        <div class="control-group">
          <label class="control-label" for="name">Full Name</label>
          <div class="controls">
            <input type="text" class="input-xlarge" name="name">
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="tel">Telephone Number</label>
          <div class="controls">
            <input type="text" class="input-xlarge"  name="tel">
          </div>
        </div>
        <div class="form-actions">
           <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </fieldset>
    </form>
  </div>
</div>
